{
  "name": "jobber",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Rivet-first hybrid job agent with worker, runner, and dashboard apps.",
  "workspaces": [
    "apps/*",
    "runner"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "dev:worker": "npm run dev -w @jobber/worker",
    "dev:dashboard": "npm run dev -w @jobber/dashboard",
    "dev:runner": "npm run dev -w @jobber/runner",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "test": "vitest run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sgr0691/Jobber.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.5.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
